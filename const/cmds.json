{

	"compile":{
		"usage": "Usage: piglet compile <id>"
		, "demand": 1
		, "describe": "Compile a Piglet project."
		, "options":{}
	}
	,
	"add":{
		"usage": "Usage: piglet add <id> <bootstrap_path> <less_path> <target_path> [src_dst...]"
		, "demand": 4
		, "describe": "Add a Piglet project."
		, "options":{}


	},
	"set":{
		"usage": "Usage: piglet set <id> <--setting> <value>"
		, "demand": 2
		, "describe": "Change a Piglet project setting."
		, "options":{
			"b":{
				"alias": "bootstrap_path",
				"describe": "set the path to Bootstrap to <value>",
				"boolean": true,
				"default": false
			},
			"l":{
				"alias": "less_path",
				"describe": "set the less path to <value>",
				"boolean": true,
				"default": false
			},
			"t":{
				"alias": "target_path",
				"describe": "set the target path to <value>",
				"boolean": true,
				"default": false
			}

		}


	}
	,
	"pair":{
		"usage": "Usage: piglet pair <id>"
		, "demand": 1
		, "describe": "Change a Piglet project's source.less:destination.css pairs."
		, "options":{}
	}
	,
	"watch":{
		"usage": "Usage: piglet watch <id>"
		, "demand": 1
		, "describe": "Watch a Piglet project's source files and compile when they change."
		, "options":{}
	}
	, "rm":{
		"usage": "Usage: piglet rm [--flags] <id>"
		, "demand": 1
		, "describe": "Remove a Piglet project."
		, "options":{
			"w": {
				"alias": "withoutWarningPrompt",
				"describe": "delete the project without having to say yes or no",
				"boolean": true,
				"default": false
			}
		}
	}
	, "ls":{
		"usage": "Usage: piglet [--flags] ls"
		, "describe": "List Piglet projects."
		, "options":{
			"d": {
				"alias": "details",
				"describe": "show intimate details (properties and validation) of each project",
				"boolean": true,
				"default": false
			}
		}
	}
	, "show":{
		"usage": "Usage: piglet show <id>"
		, "demand": 1
		, "describe": "Show properties and validate a Piglet project."
		, "options":{}
	}
	, "oink":{
		"usage": "Usage: piglet oink"
		, "describe": "Oink."
		, "options":{
			"l":{
				"alias": "loud"
				,"required": false
				,"describe": "The path to where your project's less files reside."
			}
		}
	}


}